{
  "codeLens.enable": true,
  "elixir.pathToElixirLS": "~/.elixir-ls/release/language_server.sh",

  "solargraph.useBundler": true,
  "solargraph.formatting": true,
  "solargraph.diagnostics": true,
  "solargraph.checkGemVersion": true,
  "snippets.ultisnips.pythonPrompt": false,
  "languageserver": {
    "rescript": {
      "enable": true,
      "module": "~/.local/share/nvim/site/pack/packer/start/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
	"dart"
  ],
  "dart.lineLength": 120,

  "-----comment----": "enables tailwindcss language server even though editing .erb files",
  "tailwindCSS.includeLanguages": {
  	"eelixir": "html",
  	"elixir": "html",
  	"eruby": "html",
  	"html.twig": "html"
  },
  "-----comment----": "enables tailwind's autocompletion inside of erb tag ",
  "tailwindCSS.experimental.classRegex": [
    "\\bclass:\\s*'([^']*)'",
    "\\bclass:\\s*\"([^\"]*)\"" 
  ],
}
